<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="8dp"
    cardCornerRadius="8dp">
    <LinearLayout
        android:id="@+id/linearColumnlanguageOne"
        style="@style/groupStyledeep_orange_A400cornerRadius"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_17pxh"
        android:layout_marginTop="@dimen/_32pxv"
        android:layout_marginEnd="@dimen/_17pxh"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="@dimen/_95pxh"
            android:layout_marginTop="@dimen/_15pxv"
            android:layout_marginEnd="@dimen/_94pxh"
            android:scaleType="fitXY"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/txtLanguageOne"
            style="@style/txtRubikMonoOneregular25"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="@dimen/_95pxh"
            android:layout_marginTop="@dimen/_15pxv"
            android:layout_marginEnd="@dimen/_95pxh"
            android:layout_marginBottom="@dimen/_13pxv"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="@{homeVM.homeModel.txtLanguageOne}"
            tools:text="@string/lbl_kratos" />
    </LinearLayout>

</androidx.cardview.widget.CardView>